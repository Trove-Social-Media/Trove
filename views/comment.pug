doctype html
head
  title User Profile Design
  link(rel='stylesheet' href='/stylesheets/comment.css')
  script(src='https://kit.fontawesome.com/233056fb74.js' crossorigin='anonymous')
// Side navigation
.sidenav
  // try to get  png symbol here
  a(href='/catalog/home') Feed
  a(href='/catalog/profile') My Profile
  a(href='/catalog/home/create') Make a Post
  a(href='/catalog/userlist') Find People
  a(href='Log-out.pug') Log out
.profile
  .content
      .header
        .detail
          p.name Currently viewing post
          br
          br
          p.name #{post.user.username}
        .content
          | #{post.content}
        .footer
          .like
            button.like-button
              i.fas.fa-heart
              |  13
          .comment
            button.comment-button
              i.fas.fa-comment
              |  4
  .main
    hr
    // Start div for posts
    // post 1
    each element in post.comments
        .content
          .header
            .detail
              p.name @#{element.user.username}
            .content
              | #{element.comment}
            .footer
          
    br
    br
    form(method='POST' action='/catalog/comment/create')
        textarea.postBody(type='text' name='commenttext' placeholder='Add a comment of your own')
        br
        br
        input(type='submit' name='btn_upload_profile_pic' value='Post')
    