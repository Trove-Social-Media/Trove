head
link(rel='stylesheet', href='/stylesheets/register.css')
title Create Account Page
// Page content
.bodywrapper
  form(method='POST' action='')
    div
    h3
      | Welcome to Trove. by SYNERGY
    h1.h1 Create an Account
    form
      .log-in
        .line1
          label Email:
          input#email.form-control(type='text', placeholder='Email' name='email' value=(undefined===userinfo ? '' : userinfo.email))
        .line1
          label First Name:
          input#firstname.form-control(type='text', placeholder='First name' name='firstname' value=(undefined===userinfo ? '' : userinfo.firstname))
        .line1
          label Last name:
          input#lastname.form-control(type='text', placeholder='Last name' name='lastname' value=(undefined===userinfo ? '' : userinfo.lastname))
        .line1
          label Username:
          input#username.form-control(type='text', placeholder='Username' name='username' value=(undefined===userinfo ? '' : userinfo.username))
        .line1
          label Location:
          input#location.form-control(type='text', placeholder='City, State' name='location' value=(undefined===userinfo ? '' : userinfo.location))
          //input.line2(type='text' name='user' placeholder='JohnDoe1')
        .line1
          label Password:
          input#password.form-control(type='text', placeholder='Password' name='password' value=(undefined===userinfo ? '' : userinfo.password))
        //.line1
          label Confirm Password:
          input.line2(type='text' name='pass2' placeholder='*****')
        p
          | Already have an account? 
          a(href='/catalog') Log-in.
      .form__submit-button
        input(type='submit')
