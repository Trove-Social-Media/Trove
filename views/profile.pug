doctype html
head
  title User Profile Design
  link(rel='stylesheet' href='/stylesheets/UserProfile.css')
  script(src='https://kit.fontawesome.com/233056fb74.js' crossorigin='anonymous')
// Side navigation
.sidenav
  // try to get  png symbol here
  a(href='/catalog/home') Feed
  a(href='/catalog/profile') My Profile
  a(href='/catalog/home/create') Make a Post
  a(href='/catalog/userlist') Find People
  a(href='Log-out.pug') Log out
.profile
  .image-container
    img(src= user.img.path style='width: 150px' height='150px')
    .title
      h2
        | #{user.name}
  .main
    p
      i.fas.fa-user
      |  Musician
    p
      i.fas.fa-map-pin
      |  Long Island, NY
    p
      i.fas.fa-envelope
      |  something@gmail.com
    hr
    // Start div for posts
    
    
    
    
    each element in post_list
        if(element.song.path == null)
            .content
              .header
                .detail
                  p.name #{user.name}
                .content
                  | #{element.content}
                .footer
                  .like
                    button.like-button
                      i.fas.fa-heart
                      |  #{element.likes}
                  .comment
                    button.comment-button
                      i.fas.fa-comment
                      if(element.comments!=null)
                        |  #{element.comments.length}
                      else
                        |  0
        else          
            .content
              .header
                .detail
                  p.name #{user.name}
                .content
                  | #{element.content}
                audio(src= element.song.path, controls type='audio/mpeg')
                .footer
                  .like
                    button.like-button
                      i.fas.fa-heart
                      |  #{element.likes}
                  .comment
                    button.comment-button
                      i.fas.fa-comment
                      if(element.comments!=null)
                        |  #{element.comments.length}
                      else
                        |  0
                    
                    
                    
                  
